{
  "name": "redwoodsdk-cf-blog",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./node_modules/.vite",
    "dev": "NODE_ENV=${NODE_ENV:-development} vite dev",
    "dev:init": "rw-scripts dev-init",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,jsonc,css,md}\"",
    "generate": "rw-scripts ensure-env && bun migrate:new --name=init",
    "infra:destroy": "bun alchemy.run.ts destroy",
    "infra:up": "bun alchemy.run.ts",
    "migrate:dev": "wrangler d1 migrations apply DB --local",
    "migrate:new": "drizzle-kit generate --config=drizzle.config.ts",
    "preview": "bun build && bun vite preview",
    "types": "tsc"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.7",
    "@uiw/react-md-editor": "^4.0.7",
    "better-auth": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.43.1",
    "nanoid": "^5.1.5",
    "react-hook-form": "~7.57.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "rwsdk": "^0.1.14",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "alchemy": "^0.19.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "prettier": "^3.5.3",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "wrangler": "^4.16.1"
  },
  "prettier": {
    "semi": false,
    "overrides": [
      {
        "files": [
          "*.json",
          "*.jsonc"
        ],
        "options": {
          "trailingComma": "none"
        }
      }
    ]
  }
}
